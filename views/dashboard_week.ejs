<%- include('components/header') %>
<div class="flex flex-col md:flex-row">
    <div >
        <%- include('components/sidebar') %>
    </div>
    <div class="flex flex-col w-full">

    <div class="p-4 text-xl bg-indigo-200 border-2">
        <a class="p-2" href="/subjects/<%= JSON.parse(subject)._id %>/chapter">Chapters</a>
        <a class="p-2" href="/subjects/<%= JSON.parse(subject)._id %>/assignment">Assignments</a>&nbsp;
        <a class="p-2" href="/subjects/<%= JSON.parse(subject)._id %>/resource">Resources</a>&nbsp;
    </div>
    <div class="p-5">
            
        <h2 class="text-xl py-4">Week plan for <%= JSON.parse(subject).name %> </h2>
        <div class="mx-5">
            <% for(let week in weeks) { %>
                <p>Week <%= parseInt(week)+1 %>
                    <a class="text-blue-700" href="/subjects/<%= JSON.parse(subject)._id %>/plan/<%=  weeks[week]._id%>">edit</a>
                    <a class="text-red-500" href="/subjects/<%= JSON.parse(subject)._id %>/plan/<%=  weeks[week]._id%>/delete">Delete</a>
                </p>
                <% } %>
            </div>
            <form method="POST" action="/week/create">
                <input
                type="hidden"
                name="subjectId"
                value="<%= JSON.parse(subject)._id %>"
                />
                <button class="p-2 rounded bg-blue-500 mt-2" type="submit">
                    Add week
                </button>
            </form>
        </div>
    </div>
    </div>
        
    <%- include('components/footer') %>
        



